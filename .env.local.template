# Canva Beautifying - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===================================
# Supabase Configuration (REQUIRED)
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# Cloudflare R2 Storage (REQUIRED)
# ===================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=beautifyai-storage
CLOUDFLARE_R2_PUBLIC_URL=https://your-public-r2-domain.com

# ===================================
# AI Model API Keys (REQUIRED)
# ===================================
# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_KEY_FALLBACK=optional-fallback-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_KEY_FALLBACK=optional-fallback-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_API_KEY_FALLBACK=optional-fallback-key

# ===================================
# Image Generation (REQUIRED)
# ===================================
REPLICATE_API_TOKEN=your-replicate-api-token
REPLICATE_API_KEY_FALLBACK=optional-fallback-key

# ===================================
# Redis Configuration (REQUIRED)
# ===================================
# For Production: Use Upstash Redis
UPSTASH_REDIS_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_TOKEN=your-redis-token

# For Development: Use local Redis (comment out Upstash vars above)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379

# ===================================
# Stripe Payment Configuration (REQUIRED for payments)
# ===================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_BASIC_PRICE_ID=price_xxxxx_basic
STRIPE_PRO_PRICE_ID=price_xxxxx_pro
STRIPE_PREMIUM_PRICE_ID=price_xxxxx_premium

# ===================================
# Email Configuration (REQUIRED)
# ===================================
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=BeautifyAI <noreply@yourdomain.com>
RESEND_REPLY_TO_EMAIL=support@yourdomain.com
TEST_EMAIL=test@yourdomain.com

# ===================================
# WebSocket Configuration
# ===================================
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:5001
WEBSOCKET_PORT=5001

# ===================================
# Application Configuration
# ===================================
NEXT_PUBLIC_APP_URL=http://localhost:5000
NODE_ENV=development

# Admin emails (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS=admin@yourdomain.com
ADMIN_EMAILS=admin@yourdomain.com

# Security
CRON_SECRET=your-random-cron-secret

# ===================================
# Canva Integration (OPTIONAL)
# ===================================
NEXT_PUBLIC_CANVA_API_ENABLED=false
NEXT_PUBLIC_CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret
NEXT_PUBLIC_CANVA_REDIRECT_URI=http://localhost:5000/api/canva/callback

# ===================================
# Analytics (OPTIONAL)
# ===================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=beautifyai.com

# ===================================
# Error Tracking (OPTIONAL)
# ===================================
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# SENTRY_DSN=your-sentry-dsn

# ===================================
# Monitoring (OPTIONAL)
# ===================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# ===================================
# Notes:
# ===================================
# 1. REQUIRED sections must be filled for the app to work
# 2. For production, use Upstash Redis instead of local Redis
# 3. Stripe price IDs must be created in Stripe Dashboard first
# 4. Email domain must be verified in Resend
# 5. All API keys should have appropriate permissions
# 6. WebSocket URL should match your deployment URL in production