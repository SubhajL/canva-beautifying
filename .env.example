# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=beautifyai-storage
R2_PUBLIC_URL=https://pub-xxxxxxxx.r2.dev

# AI Model API Keys
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Image Generation API Keys
REPLICATE_API_KEY=your-replicate-api-key
# OPENAI_API_KEY is also used for DALL-E 3

# Optional: Fallback API Keys
GEMINI_API_KEY_FALLBACK=
OPENAI_API_KEY_FALLBACK=
ANTHROPIC_API_KEY_FALLBACK=
REPLICATE_API_KEY_FALLBACK=

# Redis/Upstash (for queue system - Phase 2)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5001
WEBSOCKET_PORT=5001

# Stripe (for payments - Phase 2)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# For local development: Run `stripe listen --forward-to localhost:5000/api/stripe/webhook`
# Copy the webhook signing secret that appears (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (from Stripe Dashboard â†’ Products)
# Create products for Basic ($9.99), Pro ($24.99), and Premium ($49.99) plans
STRIPE_BASIC_PRICE_ID=price_your_basic_price_id
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# Cron Job Secret (for usage reset)
CRON_SECRET=

# Admin Emails (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS=

# Canva API Configuration (Optional)
NEXT_PUBLIC_CANVA_CLIENT_ID=
CANVA_CLIENT_SECRET=
NEXT_PUBLIC_CANVA_REDIRECT_URI=http://localhost:5000/api/canva/callback
NEXT_PUBLIC_CANVA_API_ENABLED=false

# Email Configuration (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=BeautifyAI <noreply@beautifyai.com>
RESEND_REPLY_TO_EMAIL=support@beautifyai.com
TEST_EMAIL=test@example.com